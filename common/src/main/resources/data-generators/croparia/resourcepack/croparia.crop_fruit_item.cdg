@startup=true;
@registry=croparia:crops;
@path={id_namespace}/items/{fruit_path}.json;
{
  "model": {
    "type": "minecraft:model",
    "model": "croparia:item/template_fruit_{type}",
    "tints": [
      {
        "type": "minecraft:constant",
        "value": -1
      },
      {
        "type": "minecraft:constant",
        "value": {color}
      }
    ]
  }
}